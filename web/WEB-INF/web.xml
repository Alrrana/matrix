    <!--OPERATIONS-->
    <display-name>Matrix</display-name>


    <servlet>
        <servlet-name>sumServlet</servlet-name>
        <servlet-class>web.SumServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sumServlet</servlet-name>
        <url-pattern>/sum</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>clearAServlet</servlet-name>
        <servlet-class>web.ClearServletA</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>clearAServlet</servlet-name>
        <url-pattern>/clearMA</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>clearBServlet</servlet-name>
        <servlet-class>web.ClearServletB</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>clearBServlet</servlet-name>
        <url-pattern>/clearMB</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>plusAServlet</servlet-name>
        <servlet-class>web.PlusOneToA</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>plusAServlet</servlet-name>
        <url-pattern>/plusMA</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>plusBServlet</servlet-name>
        <servlet-class>web.PlusOneToB</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>plusBServlet</servlet-name>
        <url-pattern>/plusMB</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>subServlet</servlet-name>
        <servlet-class>web.SubServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>subServlet</servlet-name>
        <url-pattern>/sub</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>multServlet</servlet-name>
        <servlet-class>web.MultServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>multServlet</servlet-name>
        <url-pattern>/mult</url-pattern>
    </servlet-mapping>


    <!--STATIC LINKS TO JS AND CSS-->


    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/js/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/css/*</url-pattern>
    </servlet-mapping>


    <!--==============================================================================================-->


    <filter>
        <filter-name>FilterDemo</filter-name>
        <filter-class>web.TestFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>FilterDemo</filter-name>
        <url-pattern>/plusMA</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>FilterDemo1</filter-name>
        <filter-class>web.TestFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>FilterDemo1</filter-name>
        <url-pattern>/plusMB</url-pattern>
    </filter-mapping>

<!--==============================================================================================-->


    <listener>
        <listener-class>web.TestListener</listener-class>
    </listener>

    <listener>
        <listener-class>web.SessionListener</listener-class>
    </listener>


</web-app>